<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:background="#FFFFFF"
        android:text="0"
        android:textColor="@android:color/black"
        android:gravity="right" />
    <Button
        android:id="@+id/Number_Click7"
        android:text="7" />
    <Button
        android:id="@+id/Number_Click8"
        android:text="8" />
    <Button
        android:id="@+id/Number_Click9"
        android:text="9" />
    <Button
        android:id="@+id/BinaryOperator_ClickAdd"
        android:text="+" />
    <Button
        android:id="@+id/Number_Click4"
        android:text="4" />
    <Button
        android:id="@+id/Number_Click5"
        android:text="5" />
    <Button
        android:id="@+id/Number_Click6"
        android:text="6" />
    <Button
        android:id="@+id/BinaryOperator_ClickSub"
        android:text="-" />
    <Button
        android:id="@+id/Number_Click1"
        android:text="1" />
    <Button
        android:id="@+id/Number_Click2"
        android:text="2" />
    <Button
        android:id="@+id/Number_Click3"
        android:text="3" />
    <Button
        android:id="@+id/BinaryOperator_ClickMul"
        android:text="*" />
    <Button
        android:id="@+id/Number_Click0"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"
        android:text="0" />
    <Button
        android:id="@+id/Number_ClickDot"
        android:text="." />
    <Button
        android:id="@+id/BinaryOperator_ClickDiv"
        android:text="/" />
    <Button
        android:id="@+id/Equal_Click"
        android:text="=" />
    <Button
        android:id="@+id/Parantehesis_Click_Open"
        android:text="(" />
    <Button
        android:id="@+id/Parantehesis_Click_Close"
        android:text=")" />
    <Button
        android:id="@+id/Clear"
        android:text="C" />
</GridLayout>